<body>
  <div>
    <h2>Tourist Information</h2>
      <% rows.forEach(function(r) { %>
        <form action="/editTouristInfo" method = "POST">
          <table>
          <tr><td>ID</td>     <td><input type="text" name="id" disabled value=<%= r.touristid %>></td></tr>
          <tr><td>Name</td>   <td><input type="text" name="name" value=<%= r.name %>></td></tr>
          <tr><td>Age</td>    <td><input type="text" name="age" value=<%= r.age %>></td></tr>
          <br>
          </table>
          <button type="submit">Update Information</button>
        </form>
        <form action="/allTourist" method="get">
          <button type="submit"> View All</button>
        </form>
      <% }); %>    
  </div>

</body>
</html>